<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

		<title>presentation</title>

		<link rel="stylesheet" href="modules/reveal.js-3.7.0/css/reveal.css">
		<link rel="stylesheet" href="modules/reveal.js-3.7.0/css/theme/white.css">

		<!-- Theme used for syntax highlighting of code -->
		<link rel="stylesheet" href="modules/reveal.js-3.7.0/lib/css/zenburn.css">

		<!-- Printing and PDF exports -->
		<script>
			var link = document.createElement( 'link' );
			link.rel = 'stylesheet';
			link.type = 'text/css';
			link.href = window.location.search.match( /print-pdf/gi ) ? 'modules/reveal.js-3.7.0/css/print/pdf.css' : 'modules/reveal.js-3.7.0/css/print/paper.css';
			document.getElementsByTagName( 'head' )[0].appendChild( link );
		</script>
	</head>
	<body>
		<div class="reveal">
			<div class="slides">
				<section>
					<% for(var si = 0; si < slide_info.length; si++){ %>
					<section>
						<% for(var i = 0; i < slide_info[si].length; i++){ %>
						<div style="position: absolute; left: <%= slide_info[si][i][1] %>px; top: <%= slide_info[si][i][2] %>px;"><pre style="box-shadow: none; font-size:0.6em;"><%= slide_info[si][i][0] %></pre></div>
						<% } %>
					</section>
					<% } %>
				</section>
			</div>
		</div>

		<script src="modules/reveal.js-3.7.0/lib/js/head.min.js"></script>
		<script src="modules/reveal.js-3.7.0/js/reveal.js"></script>

		<script>
			// More info about config & dependencies:
			// - https://github.com/hakimel/reveal.js#configuration
			// - https://github.com/hakimel/reveal.js#dependencies
			Reveal.initialize({
				center: false,
				backgroundTransition: 'none',
				transition: 'slide', 
				dependencies: [
					{ src: 'modules/reveal.js-3.7.0/plugin/markdown/marked.js' },
					{ src: 'modules/reveal.js-3.7.0/plugin/markdown/markdown.js' },
					{ src: 'modules/reveal.js-3.7.0/plugin/notes/notes.js', async: true },
					{ src: 'modules/reveal.js-3.7.0/plugin/highlight/highlight.js', async: true, callback: function() { hljs.initHighlightingOnLoad(); } }
				]
			});
		</script>
	</body>
</html>
